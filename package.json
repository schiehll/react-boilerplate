{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "lint": "standard --fix",
    "start": "cross-env NODE_ENV=development babel-node scripts/start",
    "build": "cross-env NODE_ENV=production babel-node scripts/build",
    "test": "standard && jest --coverage",
    "test:watch": "standard && jest --watch --coverage",
    "precommit": "npm test"
  },
  "dependencies": {
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-router": "^3.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.0",
    "babel-loader": "^6.2.7",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-2": "^6.18.0",
    "chalk": "^1.1.3",
    "connect-history-api-fallback": "^1.3.0",
    "cross-env": "^3.1.3",
    "enzyme": "^2.6.0",
    "enzyme-to-json": "^1.3.0",
    "filesize": "^3.3.0",
    "fs-extra": "^1.0.0",
    "gzip-size": "^3.0.0",
    "html-webpack-plugin": "^2.24.1",
    "husky": "^0.11.9",
    "jest-cli": "^17.0.2",
    "json-loader": "^0.5.4",
    "object-assign": "^4.1.0",
    "promise": "^7.1.1",
    "react-addons-test-utils": "^15.3.2",
    "react-dev-utils": "^0.3.0",
    "recursive-readdir": "^2.1.0",
    "rimraf": "^2.5.4",
    "standard": "^8.5.0",
    "strip-ansi": "^3.0.1",
    "webpack": "v2.1.0-beta.27",
    "webpack-dev-server": "^1.16.2"
  },
  "babel": {
    "presets": [
      ["es2015", {"modules": false}],
      "stage-2",
      "react"
    ],
    "plugins": [
      "transform-decorators-legacy"
    ]
  },
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "beforeEach",
      "test",
      "expect"
    ],
    "ignore": [
      "build"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "<rootDir>/scripts/",
      "<rootDir>/public/",
      "<rootDir>/config/",
      "<rootDir>/build/"
    ]
  }
}
